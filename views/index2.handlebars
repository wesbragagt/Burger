<div class="container-fluid">
    <div class="row">
        <div class="col text-center" id="top-bar">
            <h1>iBurger</h1>
        </div>
    </div>
    <div class="row mt-4 mb-4" id="task">
        <div class="col-6">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <div class="card bg-transparent d-flex flex-column align-items-center">
                <img class="img-fluid" src="../public/assets/images/Krabby_Patty_transparentpng.png" alt=""
                    style="max-width: 100px; height: auto;" />
                <p>{{this.id}}. {{this.burger_name}}</p>
            </div>
            <div class="text-center">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value="{{ this.id }}" /><br />
                    <button type="submit" class="btn-lg btn-default">
                        DEVOUR IT
                    </button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-6" id="task2">
            
            <div class="card bg-transparent d-flex flex-column align-items-center">
                {{#each burger_data}}
            {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{ this.id }}. {{ this.burger_name }}" readonly />
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    <div class="row d-flex flex-column align-items-center">
        <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control-lg" value="" placeholder="add a burger"
                id="enter_text" />
            <button type="submit" class="btn-lg btn-success" id="text-enter-button">
                Add
            </button>
        </form>
    </div>
</div>