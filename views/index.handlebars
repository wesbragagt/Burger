<div class="container">
    <div class="row d-flex flex-column align-items-center">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Burger Devour</h1>
        </div>
        <div class="col-6 text-center" id="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <p>
                        {{this.id}}. {{this.burger_name}}
                    </p>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value="{{this.id}}"><br>
                        <button type="submit" class="btn-lg btn-default">DEVOUR IT</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-xs-6 text-center" id="task2">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>


    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="val" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter in a burger you would like to eat!</p>
        </div>
    </div>
</div>